<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="caster" params="prefix reflect">
    <link name="${prefix}_caster">
      <xacro:mesh_visual name="caster"/>
      <collision>
        <geometry>
          <sphere radius="0.005995"/>
        </geometry>
      </collision>
      <xacro:mesh_inertia mass="0.01" scaling="100" volume="0.899919"
                          x="0.000007" y="0.000028" z="-0.000015"
                          ixx="0.129151" ixy="-0.000001" ixz="0"
                                         iyy="0.129119"  iyz="0.000010"
                                                         izz="0.129104"/>
    </link>

    <joint name="${prefix}_caster_x" type="continuous">
      <parent link="base"/>
      <origin xyz="${reflect * 0.049191} 0 -0.036909"/>
      <axis xyz="1 0 0"/>
      <child link="${prefix}_caster_x_to_y"/>
    </joint>

    <xacro:dummy_link name="${prefix}_caster_x_to_y"/>

    <joint name="${prefix}_caster_y" type="continuous">
      <parent link="${prefix}_caster_x_to_y"/>
      <axis xyz="0 1 0"/>
      <child link="${prefix}_caster_y_to_z"/>
    </joint>

    <xacro:dummy_link name="${prefix}_caster_y_to_z"/>

    <joint name="${prefix}_caster_z" type="continuous">
      <parent link="${prefix}_caster_y_to_z"/>
      <axis xyz="0 0 1"/>
      <child link="${prefix}_caster"/>
    </joint>
  </xacro:macro>

  <xacro:caster prefix="front" reflect="1"/>
  <xacro:caster prefix="back" reflect="-1"/>

</robot>
