<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="caster" params="prefix reflect">
    <link name="${prefix}_caster">
      <xacro:mesh_geometry name="caster" use_collision_mesh="false"/>
      <xacro:mesh_inertia mass="1" scaling="100" volume="0.899919"
                          x="0.000007" y="0.000028" z="-0.000015"
                          ixx="0.129151" ixy="-0.000001" ixz="0"
                                         iyy="0.129119"  iyz="0.000010"
                                                         izz="0.129104"/>
    </link>

    <joint name="${prefix}_caster_to_base" type="continuous">
      <parent link="base"/>
      <origin xyz="${reflect * 0.049191} 0 -0.036909"/>
      <axis xyz="0 1 0"/>
      <child link="${prefix}_caster"/>
    </joint>
  </xacro:macro>

  <xacro:caster prefix="front" reflect="1"/>
  <xacro:caster prefix="back" reflect="-1"/>

</robot>
